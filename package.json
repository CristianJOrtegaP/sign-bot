{
  "name": "acfixbot",
  "version": "2.1.0",
  "description": "AC FixBot - Chatbot WhatsApp para reportes de refrigeradores y vehiculos (Arca Continental)",
  "main": "api-whatsapp-webhook/index.js",
  "scripts": {
    "start": "func start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:html": "jest --coverage --coverageReporters=html",
    "test:verbose": "jest --verbose",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:contracts": "jest --testPathPattern=contracts",
    "test:security": "jest --testPathPattern=security",
    "test:resilience": "jest --testPathPattern=resilience",
    "test:webhook": "jest --testPathPattern=webhook",
    "test:handlers": "jest --testPathPattern='(messageHandler|imageHandler)'",
    "test:services": "jest --testPathPattern='(whatsappService|intentService|errorHandler)'",
    "test:fase1": "jest --testPathPattern='(optimisticLocking|deduplication|promiseUtils|raceCondition)'",
    "test:fase2": "jest --testPathPattern='(enhancedMetrics|alertingSystem)'",
    "test:ci": "jest --coverage --ci --reporters=default",
    "test:coverage:report": "jest --coverage && open coverage/lcov-report/index.html",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:load": "npx artillery run tests/load/artillery-quick.yml",
    "test:load:full": "npx artillery run tests/load/artillery.yml",
    "test:load:stress": "npx artillery run tests/load/artillery-stress.yml",
    "test:load:report": "npx artillery run tests/load/artillery.yml -o artillery-report.json && npx artillery report artillery-report.json",
    "docs:swagger": "npx @redocly/cli preview-docs docs/openapi.yaml",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "node -e \"try { require.resolve('husky') } catch(e) { process.exit(0) }\" && husky || true"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "whatsapp",
    "chatbot",
    "azure-functions",
    "gemini"
  ],
  "author": "Arca Continental",
  "license": "ISC",
  "dependencies": {
    "applicationinsights": "^3.4.0",
    "@azure/cognitiveservices-computervision": "^8.2.0",
    "@azure/data-tables": "^13.2.2",
    "@azure/identity": "^4.5.0",
    "@azure/keyvault-secrets": "^4.9.0",
    "@azure/ms-rest-js": "^2.7.0",
    "@azure/openai": "^2.0.0",
    "@azure/service-bus": "^7.9.5",
    "@azure/storage-blob": "^12.30.0",
    "@google/generative-ai": "^0.24.1",
    "axios": "^1.13.4",
    "form-data": "^4.0.5",
    "jimp": "^1.6.0",
    "mssql": "^12.2.0",
    "ogg-opus-decoder": "^1.7.3",
    "openai": "^6.18.0",
    "redis": "^5.10.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-promise": "^7.2.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.7",
    "eslint-plugin-security": "^3.0.1",
    "prettier": "^3.8.1"
  }
}

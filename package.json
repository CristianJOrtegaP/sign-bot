{
  "name": "signbot",
  "version": "1.0.0",
  "description": "Sign Bot - Chatbot WhatsApp para firma digital de documentos via DocuSign",
  "main": "api-whatsapp-webhook/index.js",
  "scripts": {
    "start": "func start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:html": "jest --coverage --coverageReporters=html",
    "test:verbose": "jest --verbose",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration",
    "test:e2e": "jest --selectProjects e2e",
    "test:webhook": "jest --selectProjects unit --testPathPatterns=webhook",
    "test:flowEngine": "jest --selectProjects unit --testPathPatterns=flowEngine",
    "test:ci": "jest --coverage --ci --reporters=default",
    "test:coverage:report": "jest --coverage && open coverage/lcov-report/index.html",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "docs:swagger": "npx @redocly/cli preview-docs docs/openapi.yaml",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "node -e \"try { require.resolve('husky') } catch(e) { process.exit(0) }\" && husky || true"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "whatsapp",
    "chatbot",
    "azure-functions",
    "docusign",
    "digital-signature"
  ],
  "author": "Arca Continental",
  "license": "ISC",
  "dependencies": {
    "@azure/data-tables": "^13.2.2",
    "@azure/identity": "^4.5.0",
    "@azure/keyvault-secrets": "^4.9.0",
    "@azure/service-bus": "^7.9.5",
    "@azure/storage-blob": "^12.30.0",
    "applicationinsights": "^3.4.0",
    "axios": "^1.13.4",
    "docusign-esign": "^8.0.1",
    "form-data": "^4.0.5",
    "mssql": "^12.2.0",
    "redis": "^5.10.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.2.1",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  }
}

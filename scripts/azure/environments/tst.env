# ============================================================================
# AC FIXBOT - Configuracion TST (Azure Cliente - Testing)
# ============================================================================
# Ambiente de pruebas/staging - SKUs basicos
# Estimado: ~$15-25 USD/mes
# ============================================================================

ENVIRONMENT="tst"
RESOURCE_GROUP="rg-acfixbot-tst"
LOCATION="westus2"

# ----------------------------------------------------------------------------
# SKUs BASICOS (Testing)
# ----------------------------------------------------------------------------
SQL_EDITION="Basic"                # Basic, Standard, Premium
SQL_CAPACITY="5"                   # DTUs
STORAGE_SKU="Standard_LRS"         # Local redundancy
FUNCTION_PLAN_SKU="Y1"             # Consumption (pay per use)
COMPUTER_VISION_SKU="S1"           # Standard (OCR necesario)
APP_INSIGHTS_SKU="Free"            # Free tier

# ----------------------------------------------------------------------------
# NOMBRES DE RECURSOS
# ----------------------------------------------------------------------------
SQL_SERVER_NAME="sql-acfixbot-tst"
SQL_DATABASE_NAME="db-acfixbot-tst"
STORAGE_ACCOUNT_NAME="stacfixbottst"
FUNCTION_APP_NAME="func-acfixbot-tst"
COMPUTER_VISION_NAME="cv-acfixbot-tst"
KEY_VAULT_NAME="kv-acfixbot-tst"
APP_INSIGHTS_NAME="appi-acfixbot-tst"

# ----------------------------------------------------------------------------
# CONFIGURACION DE IA
# ----------------------------------------------------------------------------
AI_PROVIDER="azure-openai"         # Azure OpenAI para testing (igual a prod)
USE_AI="true"
AUDIO_TRANSCRIPTION_ENABLED="true"

# ----------------------------------------------------------------------------
# RECURSOS A CREAR (true/false)
# ----------------------------------------------------------------------------
ENABLE_SQL="true"                  # Base de datos SQL
ENABLE_STORAGE="true"              # Blob storage para fotos
ENABLE_COMPUTER_VISION="true"      # OCR para fotos
ENABLE_KEY_VAULT="true"            # Secretos
ENABLE_APP_INSIGHTS="true"         # Monitoreo
ENABLE_AZURE_SPEECH="true"         # Transcripcion de audios
ENABLE_AZURE_MAPS="true"           # Geocodificacion y rutas
ENABLE_AZURE_OPENAI="true"         # Azure OpenAI (igual que prod)
ENABLE_WHISPER_MODEL="true"        # Modelo Whisper
ENABLE_STATIC_WEBAPP="true"        # Dashboard web
ENABLE_FUNCTION_APP="true"         # Function App (backend)

# Azure OpenAI config
AZURE_OPENAI_LOCATION="eastus"     # Regiones: eastus, westus, etc.
AZURE_OPENAI_DEPLOYMENT="whisper"  # Nombre del deployment

# ----------------------------------------------------------------------------
# RECURSOS OPCIONALES (DESHABILITADOS EN TST)
# ----------------------------------------------------------------------------
ENABLE_REDIS="false"
ENABLE_SERVICEBUS="false"

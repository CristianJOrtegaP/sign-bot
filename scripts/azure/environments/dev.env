# ============================================================================
# AC FIXBOT - Configuracion DEV (Tu Azure)
# ============================================================================
# Ambiente de desarrollo - SKUs basicos para minimizar costos
# Estimado: ~$15-25 USD/mes
# ============================================================================

ENVIRONMENT="dev"
RESOURCE_GROUP="rg-acfixbot-dev"
LOCATION="westus2"

# ----------------------------------------------------------------------------
# SKUs BASICOS (Desarrollo)
# ----------------------------------------------------------------------------
SQL_EDITION="Basic"                # Basic, Standard, Premium
SQL_CAPACITY="5"                   # DTUs (5 for Basic)
STORAGE_SKU="Standard_LRS"         # Local redundancy
FUNCTION_PLAN_SKU="Y1"             # Consumption (pay per use)
COMPUTER_VISION_SKU="F0"           # Free tier
APP_INSIGHTS_SKU="Free"            # Free tier

# ----------------------------------------------------------------------------
# NOMBRES DE RECURSOS
# ----------------------------------------------------------------------------
SQL_SERVER_NAME="sql-acfixbot-dev"
SQL_DATABASE_NAME="db-acfixbot-dev"
STORAGE_ACCOUNT_NAME="stacfixbotdev"
FUNCTION_APP_NAME="func-acfixbot-dev"
COMPUTER_VISION_NAME="cv-acfixbot-dev"
KEY_VAULT_NAME="kv-acfixbot-dev"
APP_INSIGHTS_NAME="appi-acfixbot-dev"

# ----------------------------------------------------------------------------
# CONFIGURACION DE IA
# ----------------------------------------------------------------------------
AI_PROVIDER="gemini"               # Gemini para dev (gratis)
USE_AI="true"
AUDIO_TRANSCRIPTION_ENABLED="false"

# ----------------------------------------------------------------------------
# RECURSOS A CREAR (true/false)
# ----------------------------------------------------------------------------
ENABLE_SQL="true"                  # Base de datos SQL
ENABLE_STORAGE="true"              # Blob storage para fotos
ENABLE_COMPUTER_VISION="true"      # OCR para fotos
ENABLE_KEY_VAULT="true"            # Secretos
ENABLE_APP_INSIGHTS="true"         # Monitoreo
ENABLE_AZURE_SPEECH="true"         # Transcripcion de audios (F0 gratis)
ENABLE_AZURE_MAPS="true"           # Geocodificacion y rutas
ENABLE_AZURE_OPENAI="false"        # Usar Gemini en dev (gratis)
ENABLE_WHISPER_MODEL="false"       # No Whisper en dev
ENABLE_STATIC_WEBAPP="true"        # Dashboard web
ENABLE_FUNCTION_APP="true"         # Function App (backend)

# ----------------------------------------------------------------------------
# RECURSOS OPCIONALES (DESHABILITADOS EN DEV)
# ----------------------------------------------------------------------------
ENABLE_REDIS="false"
ENABLE_SERVICEBUS="false"

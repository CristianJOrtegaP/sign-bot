# ============================================================================
# AC FIXBOT - Configuracion PROD (Azure Cliente - Produccion)
# ============================================================================
# Ambiente de produccion - SKUs recomendados para alta disponibilidad
# Estimado: ~$150-250 USD/mes
# ============================================================================

ENVIRONMENT="prod"
RESOURCE_GROUP="rg-acfixbot-prod"
LOCATION="westus2"

# ----------------------------------------------------------------------------
# SKUs PRODUCCION (optimizado para ~100 reportes/dia)
# Escalar a S1/EP1 cuando superes 500+ reportes/dia
# ----------------------------------------------------------------------------
SQL_EDITION="Basic"                # Basic es suficiente para 100 reportes/dia
SQL_CAPACITY="5"                   # 5 DTUs
STORAGE_SKU="Standard_LRS"         # Local redundancy (fotos no son criticas)
FUNCTION_PLAN_SKU="Y1"             # Consumption - pagas por uso
COMPUTER_VISION_SKU="S1"           # Standard (OCR necesario)
APP_INSIGHTS_SKU="Free"            # Free tier suficiente

# ----------------------------------------------------------------------------
# NOMBRES DE RECURSOS
# ----------------------------------------------------------------------------
SQL_SERVER_NAME="sql-acfixbot-prod"
SQL_DATABASE_NAME="db-acfixbot-prod"
STORAGE_ACCOUNT_NAME="stacfixbotprod"
FUNCTION_APP_NAME="func-acfixbot-prod"
COMPUTER_VISION_NAME="cv-acfixbot-prod"
KEY_VAULT_NAME="kv-acfixbot-prod"
APP_INSIGHTS_NAME="appi-acfixbot-prod"

# ----------------------------------------------------------------------------
# CONFIGURACION DE IA (Produccion)
# ----------------------------------------------------------------------------
AI_PROVIDER="azure-openai"         # Azure OpenAI - enterprise grade
USE_AI="true"
AUDIO_TRANSCRIPTION_ENABLED="true"

# ----------------------------------------------------------------------------
# RECURSOS A CREAR (true/false)
# ----------------------------------------------------------------------------
ENABLE_SQL="true"                  # Base de datos SQL
ENABLE_STORAGE="true"              # Blob storage para fotos
ENABLE_COMPUTER_VISION="true"      # OCR para fotos
ENABLE_KEY_VAULT="true"            # Secretos
ENABLE_APP_INSIGHTS="true"         # Monitoreo
ENABLE_AZURE_SPEECH="true"         # Transcripcion de audios
ENABLE_AZURE_MAPS="true"           # Geocodificacion y rutas
ENABLE_AZURE_OPENAI="true"         # Azure OpenAI (Whisper/GPT)
ENABLE_WHISPER_MODEL="true"        # Desplegar modelo Whisper
ENABLE_STATIC_WEBAPP="true"        # Dashboard web
ENABLE_FUNCTION_APP="true"         # Function App (backend)

# Azure OpenAI config
AZURE_OPENAI_LOCATION="eastus"     # Regiones: eastus, westus, etc.
AZURE_OPENAI_DEPLOYMENT="whisper"  # Nombre del deployment

# ----------------------------------------------------------------------------
# RECURSOS OPCIONALES DE ESCALABILIDAD
# ----------------------------------------------------------------------------
ENABLE_REDIS="false"               # Habilitar si >1000 usuarios/dia
ENABLE_SERVICEBUS="false"          # Habilitar para event-driven DLQ

# Redis (si se habilita)
REDIS_SKU="Standard"
REDIS_CAPACITY="1"                 # C1 - 1GB cache

# Service Bus (si se habilita)
SERVICEBUS_SKU="Standard"

# ----------------------------------------------------------------------------
# SEGURIDAD ADICIONAL (PRODUCCION)
# ----------------------------------------------------------------------------
ENABLE_EASY_AUTH="true"            # Azure AD authentication
ENABLE_PRIVATE_ENDPOINTS="false"   # Habilitar para aislamiento de red

# ----------------------------------------------------------------------------
# ALERTAS (OBLIGATORIO EN PROD)
# ----------------------------------------------------------------------------
# Configurar webhook de Slack/Teams para alertas criticas
# ALERT_WEBHOOK_URL="https://hooks.slack.com/services/..."
